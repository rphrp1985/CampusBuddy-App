<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:id="@+id/contlayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"



    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/deleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/textview1"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/imgview1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_marginBottom="6dp"


        />

    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/textview1"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgview1"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:maxLines="2"
        android:hint="Prianshu Prasad"

        />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/imgview1"
        app:layout_constraintLeft_toRightOf="@id/imgview1"
        android:layout_marginLeft="10dp"
        android:maxLines="8"
        android:ellipsize="end"
        android:textIsSelectable="true"

        android:layout_marginBottom="15dp"
        android:hint="this is text data"


/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcview2"
        app:layout_constraintTop_toBottomOf="@id/textview2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"



        />

    <ImageView
        android:id="@+id/imgview2"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:src="@drawable/ic_baseline_arrow_circle_up_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"

        />
<ImageView
    android:id="@+id/imgview3"
    android:layout_width="30dp"
    android:layout_height="30dp"

    app:layout_constraintBottom_toBottomOf="parent"
    android:src="@drawable/ic_baseline_comment_24"
    app:layout_constraintLeft_toRightOf="@id/imgview1"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="5dp"

    />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"


        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="@id/imgview3"
        android:text=" a day ago"
        android:layout_marginRight="10dp"


        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/rcview2"
        android:layout_marginTop="10dp"

        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview2"
        android:layout_marginTop="10dp"

        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/textview1"
        android:layout_marginTop="10dp"

        />

<ImageView
    android:id="@+id/clickablearea"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintHeight_percent="1"
    app:layout_constraintWidth_percent="1"


    />


</androidx.constraintlayout.widget.ConstraintLayout>