<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postBook">






    <ImageView
        android:id="@+id/closebutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginBottom="10dp"


        />

    <ImageView
        android:id="@+id/uploadbutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_file_upload_24"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintHeight_percent=".1"


        />


    <ImageView

        android:id="@+id/booklogo"

        app:layout_constraintTop_toBottomOf="@id/closebutton"

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintWidth_percent=".2"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"


        android:src="@drawable/ic_baseline_menu_book_24"

        />



    <EditText
        android:id="@+id/bookname"
        app:layout_constraintLeft_toRightOf="@+id/booklogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/booklogo"
        app:layout_constraintBottom_toBottomOf="@id/booklogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".75"
        android:layout_marginLeft="10dp"
        android:hint="Enter PDF name"


        />




    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".3"

        app:layout_constraintTop_toBottomOf="@id/booklogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:hint="Enter PDF Description"



        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcview6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Dummy1"
        android:minHeight="80dp"

        />



    <ImageView
        android:id="@+id/attachfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".1"
        android:src="@drawable/ic_baseline_attach_file_24"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"


        />

    <ImageView
        android:id="@+id/Dummy1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".1"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"


        />

    <TextView

        android:id="@+id/filelocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintWidth_percent=".80"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:visibility="gone"

        />


<ImageView
    android:id="@+id/removeSelection"
    android:layout_width="0dp"
    android:layout_height="0dp"
   app:layout_constraintTop_toTopOf="@id/filelocation"
    app:layout_constraintBottom_toBottomOf="@id/filelocation"
    app:layout_constraintLeft_toRightOf="@id/filelocation"
    android:src="@drawable/ic_baseline_close_24"
    app:layout_constraintWidth_percent=".1"
    app:layout_constraintHeight_percent=".1"
    android:visibility="gone"



    />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rcview7"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintHeight_percent=".2"
    app:layout_constraintTop_toBottomOf="@id/rcview6"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="10dp"


/>








</androidx.constraintlayout.widget.ConstraintLayout>